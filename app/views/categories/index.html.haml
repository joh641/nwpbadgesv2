.container
  .content.row
    .left-column-container.column.col-md-3
      %h3 Create Category
      = form_tag categories_path, :method => :post, :id => 'search_form' do
        .search-input-container.input-group
          %input{:class => 'form-control search-bar', :type => 'text', :placeholder => 'Choose a name...', :name => 'category_name'}
          %span{:class =>"input-group-btn"}>
            = submit_tag 'Add', :class => "btn btn-default search-submit"
    .right-column-container.column.container.col-md-8
      .header-container.row
        %h1 All Categories
      %table#categories.table
        %thead
          %tr
            %th Category
            %th Actions
        .body
          - @categories.each do |category|
            %tr
              %td= category.name
              %td
                = link_to "Edit", edit_category_path(category), :method => :get, :class => "btn btn-xs btn-default"
                = link_to "Delete", category_path(category), :method => :delete, :class => "btn btn-xs btn-danger", :confirm => 'Are you sure?'
